<!-- Horizontal Nav -->
<div class="flex w-full h-16 block items-center border-b border-gray-200 bg-white">
  <div class="w-full max-w-screen-xl relative mx-auto px-6">
    <div class="flex items-center -mx-6">
      <!-- Logo Container -->
      <div class="lg:w-1/4 xl:w-1/5 pl-6 pr-6 lg:pr-8">
        <a href="#">
          <h1 class="font-logo text-purple-600 text-3xl">Shlopify</h1>
        </a>
      </div>
      <!-- Search Container -->
      <div class="flex flex-grow lg:w-3/4 xl:w-4/5">
        <div class="w-full lg:px-6 xl:px-12">
          <div class="relative">
            <span style="position: relative; width: 100%; display: inline-block; direction: ltr;">
              <input id="docsearch" class="transition focus:outline-none border border-transparent focus:bg-white focus:border-gray-300 focus:outline-none focus:border-purple-500 placeholder-gray-600 rounded-lg bg-gray-200 py-2 pr-4 pl-10 block w-full appearance-none leading-normal ds-input" type="text" placeholder="Search Shlop (Press &quot;/&quot; to focus)" autocomplete="off" spellcheck="false" role="combobox" aria-autocomplete="list" aria-expanded="false" aria-label="search input" aria-owns="algolia-autocomplete-listbox-0" dir="auto" style="position: relative; vertical-align: top;">
              <span class="ds-dropdown-menu" role="listbox" id="algolia-autocomplete-listbox-0" style="position: absolute; top: 100%; z-index: 100; left: 0px; right: auto; display: none;">
                <div class="ds-dataset-1"></div>
              </span>
            </span>
          </div>
        </div>
      </div>
      <!-- Account Container -->
      <div class="hidden lg:flex lg:items-center lg:justify-between xl:w-1/4 px-6">
        <div class="flex justify-start items-center text-gray-500">
          <a class="block flex items-center hover:text-gray-700 mr-5" href="#">
            <%= logged_in? ? @current_user.email : "Logged Out" %>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>